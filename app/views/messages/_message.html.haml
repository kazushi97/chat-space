.chat-contents
  .chat-contents__comment-user
    = message.user.name
    %span.chat-contents__comment-date-time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  %p.chat-contents__comment
    - if message.body.present?
      = message.body
  = image_tag message.image.url, class: 'chat-contents__image' if message.image.present?
